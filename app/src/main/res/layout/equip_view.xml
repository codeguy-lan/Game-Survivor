<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="380dp"
    android:minWidth="300dp"
    android:orientation="vertical"
    android:background="@android:color/black" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/atk" />
        <TextView
            android:id="@+id/equip_txtAtk"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:textSize="15dp" />

		<ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/def" />
        <TextView
            android:id="@+id/equip_txtDef"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:textSize="15dp" />

		<ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/spd" />
		<TextView
            android:id="@+id/equip_txtSpd"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:textSize="15dp" />
		
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
	    android:layout_height="300dp"
	    android:orientation="horizontal" >
	    
	    <RelativeLayout
	        android:layout_width="180dp"
	        android:layout_height="fill_parent"
	        android:background="@drawable/body" >

	        <ImageView
	            android:id="@+id/equip_imgHead"
	            android:layout_width="50dp"
	            android:layout_height="50dp"
	            android:layout_alignParentTop="true"
	            android:layout_centerHorizontal="true"
	            android:background="@drawable/empty" />

	        <ImageView
	            android:id="@+id/equip_imgBody"
	            android:layout_width="50dp"
	            android:layout_height="50dp"
	            android:layout_centerHorizontal="true"
	            android:layout_below="@+id/equip_imgHead"
	            android:layout_marginTop="30dp"
	            android:background="@drawable/empty" />
	        
	        <ImageView
	            android:id="@+id/equip_imgBoots"
	            android:layout_width="50dp"
	            android:layout_height="50dp"
	            android:layout_centerHorizontal="true"
	            android:layout_alignParentBottom="true"
	            android:background="@drawable/empty" />

	        <ImageView
	            android:id="@+id/equip_imgPants"
	            android:layout_width="50dp"
	            android:layout_height="50dp"
	            android:layout_centerHorizontal="true"
	            android:layout_above="@+id/equip_imgBoots"
	            android:layout_marginBottom="30dp"
	            android:background="@drawable/empty" />

	        <ImageView
	            android:id="@+id/equip_imgWeapon"
	            android:layout_width="50dp"
	            android:layout_height="50dp"
	            android:layout_alignParentLeft="true"
	            android:layout_below="@+id/equip_imgBody"
	            android:background="@drawable/empty" />
	        
	        <ImageView
	            android:id="@+id/equip_imgHands"
	            android:layout_width="50dp"
	            android:layout_height="50dp"
	            android:layout_alignParentRight="true"
	            android:layout_below="@+id/equip_imgBody"
	            android:background="@drawable/empty" />
	        
        </RelativeLayout>

	    <ListView
	        android:id="@+id/equip_listView"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent" />

	</LinearLayout>
	
	<Button
		android:id="@+id/equip_btnClose"
		android:layout_width="100dp"
		android:layout_height="50dp"
		android:layout_gravity="center"
		android:text="Close" />
	
</LinearLayout>