<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="match_parent">
    
    <ImageView
        android:id="@+id/battle_imgSelf"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/battle_txtSelfHP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/battle_imgSelf"
        android:textSize="15dp" />
    
    <ImageView
        android:id="@+id/battle_imgMonster"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />
    
    <TextView
        android:id="@+id/battle_txtMonsterHP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/battle_imgMonster"
        android:textSize="15dp" />
    
    <TextView
        android:id="@+id/battle_txtStatus"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="15dp" />
    
    <Button
        android:id="@+id/battle_btnEscape"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Escape" />

    <Button
        android:id="@+id/battle_btnItem"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/battle_btnEscape"
        android:text="Item" />

    <Button
        android:id="@+id/battle_btnAttack"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/battle_btnEscape"
        android:layout_centerHorizontal="true"
        android:text="Attack" />

	
</RelativeLayout>